#-----------------------------------------------------------------------------
# Config file for compiling against the build directory
#-----------------------------------------------------------------------------
get_filename_component(SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

#-----------------------------------------------------------------------------
# Directories
#-----------------------------------------------------------------------------
set(HDF5_HERMES_VFD_INCLUDE_DIR "@HDF5_HERMES_VFD_INCLUDES_BUILD_TIME@")

#-----------------------------------------------------------------------------
# Version Strings
#-----------------------------------------------------------------------------
set(HDF5_HERMES_VFD_VERSION_STRING  @HDF5_HERMES_VFD_PACKAGE_VERSION@)
set(HDF5_HERMES_VFD_VERSION_MAJOR   @HDF5_HERMES_VFD_VERSION_MAJOR@)
set(HDF5_HERMES_VFD_VERSION_MINOR   @HDf5_HERMES_VFD_VERSION_MINOR@)
set(HDF5_HERMES_VFD_VERSION_PATCH   @HDF5_HERMES_VFD_VERSION_PATCH@)

#-----------------------------------------------------------------------------
# Don't include targets if this file is being picked up by another
# project which has already built HERMES as a subproject
#-----------------------------------------------------------------------------
if(NOT TARGET "hdf5_hermes_vfd" AND NOT HDF5_HERMES_VFD_INSTALL_SKIP_TARGETS)
  include(${SELF_DIR}/hdf5_hermes_vfd-targets.cmake)
  if(NOT TARGET "hermes")
    include(@HERMES_DIR@/hermes-config.cmake)
  endif()
endif()
